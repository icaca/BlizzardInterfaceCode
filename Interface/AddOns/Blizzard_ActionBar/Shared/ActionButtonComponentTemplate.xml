						<Scale childKey="GlowRing" duration="0.5" order="0" smoothing="OUT" fromScaleX="0" fromScaleY="0" toScaleX="5" toScaleY="5"/>
						<Scripts>
							<OnFinished method="OnFinished"/>
						</Scripts>
					</AnimationGroup>
				</Animations>
			</Frame>
		</Frames>
		<Scripts>
			<OnHide method="OnHide"/>
