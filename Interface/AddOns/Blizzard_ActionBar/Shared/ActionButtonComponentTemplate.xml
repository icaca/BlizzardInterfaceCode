						<MaskTexture parentKey="EndMask" atlas="UI-HUD-ActionBar-CastingChannel-Complete-Mask" useAtlasSize="true" vWrapMode="CLAMPTOBLACKADDITIVE" hWrapMode="CLAMPTOBLACKADDITIVE">
