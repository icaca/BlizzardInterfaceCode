	<Frame name="CatalogShopRefundFrame" mixin="CatalogShopRefundFrameMixin" frameStrata="FULLSCREEN_DIALOG" parent="UIParent" inherits="DefaultPanelTemplate" enableMouse="true" hidden="true">
