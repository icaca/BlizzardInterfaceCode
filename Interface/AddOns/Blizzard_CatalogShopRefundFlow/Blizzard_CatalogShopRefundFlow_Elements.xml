					</CheckButton>
				</Frames>
				<Layers>
					<Layer level="ARTWORK">
						<FontString parentKey="NameText" inherits="GameFontNormalMed3" wordwrap="true" justifyH="LEFT">
							<Color color="NORMAL_FONT_COLOR" />
							<Size x="220" y="38" />
							<Anchors>
								<Anchor point="LEFT" relativeKey="$parent.RefundCheckbox" relativePoint="RIGHT" x="5" y="0" />
							</Anchors>
						</FontString>
						<Texture parentKey="RefundAmountIcon" atlas="hearthsteel-icon-32x32">
							<Size x="21" y="21" />
							<Anchors>
								<Anchor point="LEFT" relativeKey="$parent.RefundCheckbox" relativePoint="RIGHT" x="300" y="0" />
							</Anchors>
						</Texture>
						<FontString parentKey="RefundAmountText" inherits="GameFontNormalMed3" wordwrap="false" justifyH="LEFT">
							<Color color="WHITE_FONT_COLOR" />
							<Size x="0" y="0" />
							<Anchors>
								<Anchor point="RIGHT" relativeKey="$parent.RefundAmountIcon" relativePoint="LEFT" x="-2" y="0" />
							</Anchors>
						</FontString>
						<FontString parentKey="TimeRemainingText" inherits="GameFontNormalMed3" wordwrap="false" justifyH="LEFT">
							<Size x="0" y="0" />
							<Anchors>
								<Anchor point="RIGHT" relativePoint="RIGHT" x="-30" y="0" />
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad" />
			<OnEnter method="OnEnter" />
			<OnLeave method="OnLeave" />
		</Scripts>
	</Button>
</Ui>
