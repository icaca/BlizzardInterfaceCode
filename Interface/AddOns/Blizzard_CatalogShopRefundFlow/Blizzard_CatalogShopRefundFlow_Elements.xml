	<Button name="CatalogShopRefundButtonTemplate" inherits="SharedButtonTemplate" mixin="CatalogShopRefundButtonMixin" virtual="true" >
		<Size x="120" y="30"/>
		<NormalFont style="GameFontWhite"/>
		<HighlightFont style="GameFontHighlight"/>
