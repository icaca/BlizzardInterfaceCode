<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\..\..\..\WoW\Data\Interface\AddOns\Blizzard_SharedXML\UI.xsd">

	<Frame name="DefaultDiamondMetalTemplate" virtual="true">
		<Layers>
			<Layer level="BACKGROUND">
				<Texture atlas ="shop-virtual currency-menu-bg" setAllPoints="true" >
				</Texture>
			</Layer>
			<Layer level="BORDER">
				<Texture name="BackgroundTexture" atlas="UI-DiamondDialogBox-Border" >
					<Anchors>
						<Anchor point="TOPLEFT" x="-10" y="10" />
						<Anchor point="BOTTOMRIGHT" x="10" y="-10" />
					</Anchors>
				</Texture>					
			</Layer>
		</Layers>
	</Frame>

	<Frame name="CatalogShopTopUpFrame" mixin="CatalogShopTopUpFrameMixin" frameStrata="FULLSCREEN_DIALOG" parent="UIParent" inherits="DefaultDiamondMetalTemplate" enableMouse="true" hidden="true">
		<Size x="1832" y="656"/>
		<Anchors>
			<Anchor point="CENTER" x="0" y="0"/>
		</Anchors>
		<Layers>
			<Layer>
				<FontString parentKey="PurchaseTotal" inherits="Game40Font_Shadow2" text="CATALOG_SHOP_TOPUPFLOW_PURCHASE">
					<Size x="500" y="50"/>
					<Color color="WHITE_FONT_COLOR"/>
					<Anchors>
						<Anchor point="TOP" relativePoint="TOP" x="0" y="-36"/>
					</Anchors>
				</FontString>

				<FontString parentKey="CurrentBalance" inherits="Game22Font">
					<Size x="500" y="50"/>
					<Color color="NORMAL_FONT_COLOR"/>
					<Anchors>
						<Anchor point="TOP" relativeKey="$parent.PurchaseTotal" relativePoint="BOTTOM" x="0" y="-4"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button parentKey="CloseButton" inherits="UIPanelCloseButtonNoScripts" frameLevel="510">
				<Anchors>
					<Anchor point="TOPRIGHT" x="3" y="2" />
				</Anchors>
				<Scripts>
					<OnClick>
						self:GetParent():Hide();
						PlaySound(SOUNDKIT.IG_MAINMENU_OPTION_CHECKBOX_ON);
					</OnClick>
				</Scripts>
			</Button>
			
			<Frame parentKey="TopUpProductContainerFrame" mixin="TopUpProductContainerFrameMixin" frameLevel="500" >
				<Size y="412"/>
					<Anchors>
						<Anchor point="TOP" relativeKey="$parent.CurrentBalance" relativePoint="BOTTOM" x="0" y="-10" />
						<Anchor point="LEFT" relativeKey="$parent" relativePoint="LEFT" x="36" y="0" />
						<Anchor point="RIGHT" relativeKey="$parent" relativePoint="RIGHT" x="-36" y="0" />
					</Anchors>
				<Frames>
					<Frame parentKey="ScrollBox" inherits="WowScrollBoxList" setAllPoints="true" />
				</Frames>
				<Scripts>
					<OnLoad method="OnLoad"/>
				</Scripts>
			</Frame>

			<Frame parentKey="CoverFrame" useParentLevel="true" enableMouse="true" hidden="true">
				<KeyValues>
					<KeyValue key="ignoreInLayout" value="true" type="boolean"/>
				</KeyValues>
				<Layers>
					<Layer level="BACKGROUND" textureSubLevel="-1">
						<Texture setAllPoints="true">
							<Color r="0" g="0" b="0" a="0.5"/>
						</Texture>
					</Layer>
				</Layers>
			</Frame>
		</Frames>

		<Scripts>
			<OnLoad method="OnLoad" />
			<OnEvent method="OnEvent" />
			<OnShow method="OnShow" />
			<OnHide method="OnHide" />
			<OnAttributeChanged method="OnAttributeChanged" />
		</Scripts>
	</Frame>

</Ui>
