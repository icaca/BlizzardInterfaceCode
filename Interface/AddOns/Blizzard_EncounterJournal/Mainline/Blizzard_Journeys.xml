<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\Blizzard_SharedXML\UI.xsd">

	<!-- Renown Card Button -->
	<Button name="RenownCardButtonTemplate" mixin="RenownCardButtonMixin" virtual="true">
		<Size x="330" y="100"/>
		<Frames>
			<Cooldown parentKey="RenownCardProgressBar" reverse="true" hideCountdownNumbers="true" rotation="180" useParentLevel="true">
				<Size x="85" y="85"/>
				<Anchors>
					<Anchor point="LEFT" x="10"/>
				</Anchors>
				<Layers>
					<Layer level="BORDER">
						<Texture parentKey="Border" atlas="dragonflight-landingpage-radial-frame" setAllPoints="true"/>
					</Layer>
				</Layers>
				<SwipeTexture file="Interface\PVPFrame\pvpqueue-sidebar-honorbar-fill"/>
			</Cooldown>

			<Frame parentKey="WatchedFactionToggleFrame" hidden="true">
				<Size x="200" y="20"/>
				<Anchors>
					<Anchor point="LEFT" relativeKey="$parent.RenownCardProgressBar" relativePoint="RIGHT" x="5" y="5"/>
					<Anchor point="BOTTOM" y="5"/>
				</Anchors>
				<Frames>
					<CheckButton parentKey="WatchFactionCheckbox" inherits="UICheckButtonTemplate" mixin="WatchedFactionToggleFrameMixin">
						<Size x="26" y="26"/>
						<Anchors>
							<Anchor point="LEFT"/>
						</Anchors>
						<HitRectInsets left="0" right="0" top="0" bottom="0"/>
						<Layers>
							<Layer level="ARTWORK">
								<FontString parentKey="Label" inherits="GameFontNormalSmall" text="SHOW_FACTION_ON_MAINSCREEN">
									<Anchors>
										<Anchor point="LEFT" relativePoint="RIGHT" x="-2" y="0"/>
									</Anchors>
								</FontString>
							</Layer>
						</Layers>
						<Scripts>
							<OnShow method="OnShow"/>
							<OnClick method="OnClick"/>
							<OnEnter method="OnEnter"/>
							<OnLeave method="OnLeave"/>
						</Scripts>
					</CheckButton>
				</Frames>
			</Frame>
		</Frames>
		<Layers>
			<Layer level="OVERLAY">
				<Texture parentKey="Hover" atlas="shop-card-wide-map" useAtlasSize="true" alphaMode="ADD" alpha="0.25" hidden="true"> <!--! TODO: final art needed, not final alpha -->
					<Anchors>
						<Anchor point="TOPLEFT"/>
						<Anchor point="BOTTOMRIGHT"/>
					</Anchors>
				</Texture>
			</Layer>

			<Layer level="BACKGROUND">
				<Texture parentKey="RenownCardBG" atlas="shop-card-wide-map" setAllPoints="true" useAtlasSize="false"> <!--! TODO: final art needed -->
					<Size x="330" y="100"/>
				</Texture>
			</Layer>

			<Layer level="ARTWORK">
				<Texture parentKey="RenownCardIcon" useAtlasSize="false">
					<Size x="47" y="47"/> <!--! TODO: adjust once swipe texture + prog bar has more work done -->
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent.RenownCardProgressBar"/>
					</Anchors>
				</Texture>
				<FontString parentKey="RenownCardFactionName" inherits="GameFontHighlightMed2" justifyH="LEFT" justifyV="TOP">
					<Size x="225" y="20"/>
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.RenownCardProgressBar" relativePoint="RIGHT" x="5" y="5"/>
					</Anchors>
				</FontString>
				<FontString parentKey="RenownCardFactionLevel" inherits="GameFontNormalMed2" justifyH="LEFT" justifyV="TOP">
					<Size x="220" y="15"/>
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.RenownCardProgressBar" relativePoint="RIGHT" x="5"/>
						<Anchor point="TOP" relativeKey="$parent.RenownCardFactionName" relativePoint="BOTTOM"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
			<OnClick method="OnClick"/>
		</Scripts>
	</Button>

	<!-- "Other" Journey Card Button -->
	<Button name="JourneyCardButtonTemplate" mixin="JourneyCardButtonMixin" virtual="true">
		<Size x="340" y="135"/>
		<Frames>
			<StatusBar parentKey="JourneyCardProgressBar">
				<Size x="290" y="10"/>
				<BarTexture atlas="widgetstatusbar-fill-green"/> <!--! TODO: final art needed, may want to adjust the rest of the look/feel of this at some point, too -->
				<Anchors>
					<Anchor point="BOTTOM" y="10"/>
					<Anchor point="CENTER"/>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture parentKey="JourneyCardProgressBarBG" atlas="widgetstatusbar-fill-white">
							<Size x="290" y="10"/>
							<Anchors>
								<Anchor point="BOTTOM"/>
								<Anchor point="CENTER"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
			</StatusBar>
		</Frames>
		<Layers>
			<Layer level="OVERLAY">
				<Texture parentKey="Hover" atlas="shop-card-wide-map" useAtlasSize="true" alphaMode="ADD" alpha="0.25" hidden="true"> <!--! TODO: final art needed -->
					<Anchors>
						<Anchor point="TOPLEFT"/>
						<Anchor point="BOTTOMRIGHT"/>
					</Anchors>
				</Texture>
			</Layer>

			<Layer level="BACKGROUND">
				<Texture parentKey="JourneyCardBG" atlas="shop-card-wide-map" setAllPoints="true" useAtlasSize="false"> <!--! TODO: final art needed -->
					<Size x="340" y="135"/>
				</Texture>
			</Layer>

			<Layer level="ARTWORK">
				<Texture parentKey="JourneyHighlightBG" useAtlasSize="false" alpha="0.25"> <!--! TODO final art needed, not final alpha -->
					<Size x="290" y="100"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
				<FontString parentKey="JourneyCardName" inherits="GameFontHighlightMed2" justifyH="LEFT" justifyV="TOP">
					<Size x="290" y="20"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.JourneyHighlightBG"/>
					</Anchors>
				</FontString>
				<FontString parentKey="JourneyCardLevel" inherits="GameFontNormalSmall2" justifyH="LEFT" justifyV="TOP">
					<Size x="150" y="10"/>
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.JourneyHighlightBG"/>
						<Anchor point="BOTTOM" relativeKey="$parent.JourneyCardProgressBar" relativePoint="TOP" y="5"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
			<OnClick method="OnClick"/>
		</Scripts>
	</Button>

	<!-- Journeys List Category Name -->
	<Frame name="JourneysListCategoryNameTemplate" virtual="true">
		<Size x="0" y="20"/>
		<Anchors>
			<Anchor point="LEFT"/>
			<Anchor point="RIGHT"/>
		</Anchors>
		<Layers>
			<Layer level="ARTWORK">
				<FontString parentKey="CategoryName" inherits="GameFontHighlightLarge" justifyH="LEFT" justifyV="TOP">
					<Size x="0" y="20"/>
					<Anchors>
						<Anchor point="LEFT"/>
						<Anchor point="RIGHT"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>

	<!-- Journeys List Category Divider -->
	<Frame name="JourneysListCategoryDividerTemplate" virtual="true"> <!--! TODO final art needed, using recipelist-divider as a placeholder -->
		<Size x="0" y="10"/>
			<Anchors>
				<Anchor point="LEFT"/>
				<Anchor point="RIGHT"/>
			</Anchors>
		<Layers>
			<Layer level="ARTWORK">
				<Texture parentKey="CategoryDivider" atlas="recipelist-divider" useAtlasSize="false">
					<Size x="0" y="10"/>
				</Texture>
			</Layer>
		</Layers>
	</Frame>

	<!-- Journey Overview Button -->
	<Button name="JourneyOverviewButtonTemplate" inherits="UIPanelButtonTemplate" text="JOURNEYS_OVERVIEW_LABEL" mixin="JourneyOverviewBtnMixin" virtual="true">
		<Size x="100" y="30"/>
		<Anchors>
			<Anchor point="TOPRIGHT" x="-8" y="-8"/>
		</Anchors>
		<Scripts>
			<OnClick method="OnClick"/>
		</Scripts>
	</Button>

	<!-- Overview Highlight -->
	<Frame name="JourneyOverviewHighlightTemplate" virtual="true">
		<Size x="240" y="60"/>
		<Layers>
			<Layer level="ARTWORK">
				<Texture parentKey="Bullet" file="Interface\QuestFrame\UI-Quest-BulletPoint">
					<Size x="16" y="16"/>
					<Anchors>
						<Anchor point="LEFT"/>
					</Anchors>
				</Texture>
				<FontString parentKey="HighlightText" inherits="GameFontNormalSmall2" justifyH="LEFT">
					<Size x="220" y="60"/>
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.Bullet" relativePoint="RIGHT" x="5"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>

	<!-- Progress Reward Card -->
	<Frame name="JourneyProgressRewardCardTemplate" virtual="true">
		<Size x="310" y="85"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="RewardCardBG" atlas="shop-card-wide-map" useAtlasSize="false" setAllPoints="true"/> <!--! TODO final art -->
			</Layer>
			<Layer level="ARTWORK">
				<Texture parentKey="RewardCardIcon">
					<Size x="45" y="45"/>
					<Anchors>
						<Anchor point="LEFT" x="10"/>
					</Anchors>
				</Texture>
				<MaskTexture parentKey="TextureMask" atlas="talents-node-choice-mask" useAtlasSize="false" vWrapMode="CLAMPTOBLACKADDITIVE" hWrapMode="CLAMPTOBLACKADDITIVE" hidden="true">
					<Size x="40" y="40"/>
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent.RewardCardIcon"/>
					</Anchors>
					<MaskedTextures>
						<MaskedTexture childKey="RewardCardIcon"/>
					</MaskedTextures>
				</MaskTexture>
				<FontString parentKey="RewardCardName" inherits="GameFontHighlightMed2" justifyH="LEFT">
					<Size x="220" y="40"/>
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.RewardCardIcon" relativePoint="RIGHT" x="15"/>
						<Anchor point="CENTER" relativeKey="$parent.RewardCardIcon"/>
					</Anchors>
				</FontString>
			</Layer>
			<Layer level="ARTWORK" textureSubLevel="1">
				<Texture parentKey="RewardCardIconBorderDefault" atlas="UI-Frame-IconBorder" useAtlasSize="false">
					<Size x="50" y="50"/>
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent.RewardCardIcon"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
	</Frame>

	<!-- Journeys Frame -->
	<Frame name="JourneysFrameTemplate" mixin="JourneysFrameMixin" virtual="true">
		<Frames>
			<Frame parentKey="JourneysList" inherits="WowScrollBoxList" setAllPoints="true"/>
			<EventFrame parentKey="ScrollBar" inherits="MinimalScrollBar">
				<Anchors>
					<Anchor point="TOP" y="-10"/>
					<Anchor point="BOTTOM" y="10"/>
					<Anchor point="LEFT" relativeKey="$parent.JourneysList" relativePoint="RIGHT" x="-20"/>
				</Anchors>
			</EventFrame>

			<!-- Journeys "Progress" Frame - shows the reward track, other features, access to overview page -->
			<Frame parentKey="JourneyProgress" hidden="true" setAllPoints="true" mixin="JourneyProgressFrameMixin">
				<Layers>
					<Layer level="ARTWORK">
						<FontString parentKey="JourneyName" inherits="GameFontHighlightHuge2">
							<Size x="500" y="25"/>
							<Anchors>
								<Anchor point="TOP" y="-15"/>
								<Anchor point="CENTER"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Frames>
					<Frame parentKey="LockedStateFrame" mixin="JourneysLockedStateMixin" hidden="true">
						<Size x="170" y="25"/>
						<Anchors>
							<Anchor point="TOP" relativeKey="$parent.JourneyName" relativePoint="BOTTOM" y="-10"/>
							<Anchor point="CENTER"/>
						</Anchors>
						<Layers>
							<Layer level="ARTWORK">
								<Texture parentKey="LockIcon" atlas="activities-icon-lock">
									<Size x="35" y="35"/>
									<Anchors>
										<Anchor point="LEFT"/>
									</Anchors>
								</Texture>
								<FontString parentKey="JourneyLockedText" inherits="GameFontHighlightLarge" text="JOURNEYS_JOURNEY_LOCKED_LABEL" justifyH="LEFT">
									<Size x="135" y="25"/>
									<Anchors>
										<Anchor point="LEFT" relativeKey="$parent.LockIcon" relativePoint="RIGHT"/>
									</Anchors>
								</FontString>
							</Layer>
						</Layers>
						<Scripts>
							<OnShow method="OnShow"/>
						</Scripts>
					</Frame>
					<Frame parentKey="ProgressDetailsFrame" hidden="true">
						<Size x="270" y="35"/>
						<Anchors>
							<Anchor point="TOP" relativeKey="$parent.JourneyName" relativePoint="BOTTOM" y="-5"/>
							<Anchor point="CENTER"/>
						</Anchors>
						<Layers>
							<Layer level="ARTWORK">
								<Texture parentKey="JourneyLevelBg" atlas="checkbox-minimal"> <!--! TODO final art needed -->
									<Size x="50" y="33"/>
									<Anchors>
										<Anchor point="LEFT"/>
									</Anchors>
								</Texture>
								<FontString parentKey="JourneyLevel" inherits="GameFontNormalMed2">
									<Size x="30" y="10"/>
									<Anchors>
										<Anchor point="CENTER" relativeKey="$parent.JourneyLevelBg"/>
									</Anchors>
								</FontString>
								<FontString parentKey="JourneyLevelProgress" inherits="GameFontNormalMed2" justifyH="LEFT">
									<Size x="250" y="30"/>
									<Anchors>
										<Anchor point="LEFT" relativeKey="$parent.JourneyLevel" relativePoint="RIGHT" x="15"/>
									</Anchors>
								</FontString>
							</Layer>
						</Layers>
					</Frame>
					<Button parentKey="OverviewBtn" inherits="JourneyOverviewButtonTemplate" hidden="true"/>
					<!-- Reward track for renown journeys -->
					<Frame parentKey="RenownTrackFrame" inherits="RewardTrackFrameTemplate" hidden="true">
						<KeyValues>
							<KeyValue key="rewardButtonXOffset" value="30" type="number"/>
							<KeyValue key="elementTemplate" value="RenownLevelTemplate" type="string"/>
							<KeyValue key="scrollStartSound" value="SOUNDKIT.UI_MAJOR_FACTION_RENOWN_SLIDE_START" type="global"/>
							<KeyValue key="scrollCenterChangeSound" value="SOUNDKIT.UI_MAJOR_FACTION_RENOWN_SLIDE_START" type="global"/>
						</KeyValues>
						<Anchors>
							<Anchor point="TOP" relativeKey="$parent.ProgressDetailsFrame" relativePoint="BOTTOM" y="-25"/>
						</Anchors>
					</Frame>
					<!-- Reward gtrack for encounter journeys: delves, prey, etc. -->
					<Frame parentKey="EncounterRewardProgressFrame" inherits="RewardProgressFrameTemplate" hidden="true">
						<KeyValues>
							<KeyValue key="elementWidth" value="135" type="number"/>
							<KeyValue key="elementSpacing" value="15" type="number"/>
							<KeyValue key="rewardButtonXOffset" value="30" type="number"/>
							<KeyValue key="elementTemplate" value="RenownLevelCardTemplate" type="string"/>
							<KeyValue key="scrollStartSound" value="SOUNDKIT.UI_MAJOR_FACTION_RENOWN_SLIDE_START" type="global"/>
							<KeyValue key="scrollCenterChangeSound" value="SOUNDKIT.UI_MAJOR_FACTION_RENOWN_SLIDE_START" type="global"/>
						</KeyValues>
						<Anchors>
							<Anchor point="TOP" relativeKey="$parent.ProgressDetailsFrame" relativePoint="BOTTOM" y="-5"/>
						</Anchors>
					</Frame>
					<Frame parentKey="Divider">
						<Size x="0" y="8"/>
						<Anchors>
							<Anchor point="LEFT" x="45"/>
							<Anchor point="RIGHT" x="-45"/>
						</Anchors>
						<Layers>
							<Layer level="ARTWORK">
								<Texture parentKey="DividerTexture" atlas="recipelist-divider" useAtlasSize="false" setAllPoints="true"/> <!--! TODO final art needed, using recipelist-divider as a placeholder -->
							</Layer>
						</Layers>
					</Frame>
					<Frame parentKey="DelvesCompanionConfigurationFrame" hidden="true">
						<Size x="310" y="85"/>
						<Anchors>
							<Anchor point="TOP" relativeKey="$parent.Divider" relativePoint="BOTTOM" y="-25"/>
							<Anchor point="CENTER"/>
						</Anchors>
						<Layers>
							<Layer level="BACKGROUND">
								<Texture parentKey="BG" atlas="shop-card-wide-map" useAtlasSize="false" setAllPoints="true"/>
							</Layer>

							<Layer level="ARTWORK">
								<Texture parentKey="Icon">
									<Size x="48" y="48"/>
									<Anchors>
										<Anchor point="LEFT" x="20"/>
									</Anchors>
								</Texture>

								<FontString parentKey="CompanionName" inherits="GameFontHighlightMedium" justifyH="LEFT">
									<Size x="200" y="25"/>
									<Anchors>
										<Anchor point="TOPLEFT" relativeKey="$parent.Icon" relativePoint="TOPRIGHT" x="20" y="5"/>
									</Anchors>
								</FontString>
							</Layer>

							<Layer level="BORDER">
								<Texture parentKey="IconBorder" atlas="Garr_FollowerPortrait_Ring" useAtlasSize="false">
									<Size x="72" y="72"/>
									<Anchors>
										<Anchor point="CENTER" relativeKey="$parent.Icon" x="2" y="-1"/>
									</Anchors>
								</Texture>
							</Layer>
						</Layers>
						<Frames>
							<Button parentKey="CompanionConfigBtn" inherits="UIPanelButtonTemplate" text="JOURNEYS_COMPANION_CONFIG_LABEL" mixin="JourneyCompanionConfigBtnMixin" motionScriptsWhileDisabled="true" hidden="true">
								<Size x="200" y="30"/>
								<Anchors>
									<Anchor point="TOP" relativeKey="$parent.CompanionName" relativePoint="BOTTOM" y="-5"/>
									<Anchor point="LEFT" relativeKey="$parent.CompanionName" x="-2"/>
								</Anchors>
								<Scripts>
									<OnShow method="OnShow"/>
									<OnEnter method="OnEnter"/>
									<OnClick method="OnClick"/>
								</Scripts>
							</Button>
						</Frames>
					</Frame>
				</Frames>
				<Scripts>
					<OnLoad method="OnLoad"/>
					<OnShow method="OnShow"/>
					<OnMouseWheel method="OnMouseWheel"/>
				</Scripts>
			</Frame>
			<!-- Journeys Overview Frame - shows icon, details/description, highlights -->
			<Frame parentKey="JourneyOverview" hidden="true" setAllPoints="true" mixin="JourneyOverviewFrameMixin">
				<Layers>
					<Layer level="ARTWORK">
						<Texture parentKey="JourneyIcon">
							<Size x="75" y="75"/>
							<Anchors>
								<Anchor point="TOP" y="-10"/>
								<Anchor point="CENTER"/>
							</Anchors>
						</Texture>
						<FontString parentKey="JourneyName" inherits="GameFontHighlightHuge2">
							<Size x="500" y="25"/>
							<Anchors>
								<Anchor point="TOP" relativeKey="$parent.JourneyIcon" relativePoint="BOTTOM" y="-10"/>
								<Anchor point="CENTER"/>
							</Anchors>
						</FontString>
						<FontString parentKey="JourneyWarbandLabel" inherits="GameFontHighlightMed2" text="REPUTATION_TOOLTIP_ACCOUNT_WIDE_LABEL" hidden="true">
							<Size x="500" y="25"/>
							<Color color="ACCOUNT_WIDE_FONT_COLOR"/>
							<Anchors>
								<Anchor point="TOP" relativeKey="$parent.JourneyName" relativePoint="BOTTOM" y="-5"/>
								<Anchor point="CENTER"/>
							</Anchors>
						</FontString>
						<FontString parentKey="JourneyDescription" justifyV="TOP" inherits="GameFontNormalMed2">
							<Size x="600" y="70"/>
							<Anchors>
								<Anchor point="CENTER"/>
							</Anchors>
						</FontString>
						<Texture parentKey="Divider" atlas="recipelist-divider" useAtlasSize="false" hidden="true"> <!--! TODO final art needed, using recipelist-divider as a placeholder -->
							<Size x="300" y="8"/>
							<Anchors>
								<Anchor point="CENTER"/>
								<Anchor point="TOP" relativeKey="$parent.JourneyDescription" relativePoint="BOTTOM"/>
							</Anchors>
						</Texture>
						<FontString parentKey="HighlightLabel" inherits="GameFontHighlightMedium" text="JOURNEYS_HIGHLIGHT_LABEL" hidden="true">
							<Size x="200" y="10"/>
							<Anchors>
								<Anchor point="CENTER"/>
								<Anchor point="TOP" relativeKey="$parent.Divider" relativePoint="BOTTOM" y="-5"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Frames>
					<Button parentKey="OverviewBtn" inherits="JourneyOverviewButtonTemplate" text="BACK" hidden="false"/>
					<Frame parentKey="Highlights" mixin="JourneyOverviewHighlightsFrameMixin" hidden="true">
						<Anchors>
							<Anchor point="LEFT" x="10"/>
							<Anchor point="RIGHT" x="-10"/>
							<Anchor point="TOP" relativeKey="$parent.HighlightLabel" relativePoint="BOTTOM" y="-20"/>
							<Anchor point="BOTTOM" y="5"/>
						</Anchors>
						<Scripts>
							<OnLoad method="OnLoad"/>
							<OnShow method="OnShow"/>
						</Scripts>
					</Frame>
				</Frames>
				<Scripts>
					<OnShow method="OnShow"/>
				</Scripts>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnShow method="OnShow"/>
		</Scripts>
	</Frame>
</Ui>
