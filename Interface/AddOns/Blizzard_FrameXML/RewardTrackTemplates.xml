	<Frame name="RewardTrackFrameTemplate" mixin="RewardTrackFrameMixin" virtual="true">
		<Size x="570" y="72"/>
		<Frames>
			<Frame parentKey="ClipFrame" clipChildren="true" setAllPoints="true">
				<Layers>
					<Layer level="OVERLAY">
						<MaskTexture parentKey="Mask" atlas="CovenantSanctum-Renown-Scroll-Mask" useAtlasSize="true" hWrapMode="CLAMPTOBLACKADDITIVE" vWrapMode="CLAMPTOBLACKADDITIVE">
							<Anchors>
								<Anchor point="CENTER"/>
							</Anchors>
						</MaskTexture>
					</Layer>
				</Layers>
				<Frames>
					<Frame parentKey="ParagonLevelFrame" hidden="true">
						<Size x="200" y="50"/>
						<Layers>
							<Layer level="ARTWORK">
								<Texture parentKey="Divider" atlas="ui-journeys-paragon-level-divider" useAtlasSize="true">
									<Anchors>
										<Anchor point="LEFT" x="-10"/>
									</Anchors>
								</Texture>
							</Layer>
							<Layer level="BACKGROUND">
								<Texture parentKey="LabelBackground" atlas="ui-journeys-paragon-level-bar" useAtlasSize="true">
									<Anchors>
										<Anchor point="LEFT" relativeKey="$parent.Divider" relativePoint="RIGHT"/>
									</Anchors>
								</Texture>
								<Texture parentKey="Icon">
									<Size x="40" y="40"/>
									<Anchors>
										<Anchor point="RIGHT" relativeKey="$parent.LabelBackground" relativePoint="RIGHT" x="-12"/>
									</Anchors>
								</Texture>
								<Texture parentKey="LevelFrame" atlas="ui-journeys-paragon-level-frame" useAtlasSize="true">
									<Anchors>
										<Anchor point="LEFT" relativeKey="$parent.LabelBackground" relativePoint="LEFT" x="10"/>
									</Anchors>
								</Texture>
								<FontString parentKey="Label" inherits="GameFontHighlight" justifyH="LEFT" text="JOURNEYS_MAX_RENOWN_LABEL">
									<Size x="105" y="35"/>
									<Anchors>
										<Anchor point="LEFT" relativeKey="$parent.LevelFrame" relativePoint="RIGHT" x="5"/>
									</Anchors>
								</FontString>
							</Layer>
							<Layer level="BORDER">
								<Texture parentKey="IconBorder" atlas="ui-journeys-delve-rewardicon-square-frame" useAtlasSize="true">
									<Size x="55" y="55"/>
									<Anchors>
										<Anchor point="CENTER" relativeKey="$parent.Icon"/>
									</Anchors>
								</Texture>
							</Layer>
							<Layer level="OVERLAY">
								<FontString parentKey="Level" inherits="GameFontNormal" justifyH="CENTER">
									<Anchors>
										<Anchor point="CENTER" relativeKey="$parent.LevelFrame"/>
									</Anchors>
								</FontString>
							</Layer>
							<Layer level="HIGHLIGHT">
								<Texture parentKey="HighlightTexture" alphaMode="ADD" alpha="0.4">
									<Size x="40" y="40"/>
									<Anchors>
										<Anchor point="CENTER" relativeKey="$parent.Icon"/>
									</Anchors>
								</Texture>
							</Layer>
						</Layers>
					</Frame>
				</Frames>
			</Frame>
			<Button parentKey="LeftButton" inherits="RewardTrackButtonTemplate">
				<KeyValues>
					<KeyValue key="direction" value="-1" type="number"/>
				</KeyValues>
				<Anchors>
					<Anchor point="RIGHT" relativePoint="LEFT" x="-4"/>
				</Anchors>
			</Button>
			<Button parentKey="JumpLeftButton" inherits="RewardTrackJumpButtonTemplate">
				<KeyValues>
					<KeyValue key="direction" value="-1" type="number"/>
				</KeyValues>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.LeftButton" relativePoint="LEFT" x="-17"/>
				</Anchors>
			</Button>
			<Button parentKey="RightButton" inherits="RewardTrackButtonTemplate">
				<KeyValues>
					<KeyValue key="direction" value="1" type="number"/>
				</KeyValues>
				<Anchors>
					<Anchor point="LEFT" relativePoint="RIGHT" x="4"/>
				</Anchors>
			</Button>
			<Button parentKey="JumpRightButton" inherits="RewardTrackJumpButtonTemplate">
				<KeyValues>
					<KeyValue key="direction" value="1" type="number"/>
				</KeyValues>
				<Anchors>
					<Anchor point="LEFT" relativeKey="$parent.RightButton" relativePoint="RIGHT" x="17"/>
				</Anchors>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnHide method="OnHide"/>
			<OnUpdate method="OnUpdate"/>
		</Scripts>
	</Frame>

