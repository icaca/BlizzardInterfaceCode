										<Anchor point="CENTER" relativeKey="$parent.LabelBackground"/>
									</Anchors>
								</FontString>
							</Layer>
							<Layer level="BORDER">
								<Texture parentKey="IconBorder" atlas="CovenantSanctum-Renown-Icon-Border-Standard" useAtlasSize="true">
