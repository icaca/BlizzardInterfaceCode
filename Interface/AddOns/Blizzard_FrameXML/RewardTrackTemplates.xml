									<Anchors>
										<Anchor point="CENTER" relativeKey="$parent.Icon"/>
									</Anchors>
								</Texture>
							</Layer>
							<Layer level="OVERLAY">
								<FontString parentKey="Level" inherits="GameFontNormal">
