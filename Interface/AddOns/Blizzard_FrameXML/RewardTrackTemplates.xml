<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\Blizzard_SharedXML\UI.xsd">
	<Script file="RewardTrackTemplates.lua"/>

	<Frame name="RenownLevelTemplate" mixin="RenownLevelMixin" virtual="true">
		<Size x="55" y="55"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Icon" parentArray="Textures">
					<Size x="40" y="40"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="BORDER">
				<Texture parentKey="IconBorder" parentArray="Textures">
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<Texture parentKey="CheckmarkFlipbook" alpha="0" alphaMode="BLEND" atlas="activities-checkmark_flipbook-small" parentArray="Textures">
					<Size x="59" y="59"/>
					<Anchors>
						<Anchor point="CENTER" relativePoint="BOTTOMRIGHT" x="-13" y="10"/>
					</Anchors>
				</Texture>
				<Texture parentKey="EarnedCheckmark" atlas="activities-icon-checkmark-small" useAtlasSize="true" parentArray="Textures">
					<Anchors>
						<Anchor point="BOTTOMRIGHT" x="-5" y="5"/>
					</Anchors>
				</Texture>
				<Texture parentKey="LevelRectangle" atlas="ui-journeys-delve-rewardicon-rectangle-frame" useAtlasSize="true">
					<Anchors>
						<Anchor relativeKey="$parent.IconBorder" point="BOTTOM" y="-9"/>
					</Anchors>
				</Texture>
				<FontString parentKey="Level" inherits="GameFontNormal" justifyH="CENTER">
					<Anchors>
						<Anchor relativeKey="$parent.LevelRectangle" point="CENTER"/>
					</Anchors>
				</FontString>
				<MaskTexture parentKey="HexMask" atlas="ui-journeys-delve-rewardicon-octagon-Mask" useAtlasSize="true" hWrapMode="CLAMPTOBLACKADDITIVE" vWrapMode="CLAMPTOBLACKADDITIVE">
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</MaskTexture>
			</Layer>
			<Layer level="HIGHLIGHT">
				<Texture parentKey="HighlightTexture" parentArray="Textures" alphaMode="ADD" alpha="0.4">
					<Size x="40" y="40"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnMouseUp method="OnMouseUp"/>
			<OnEnter method="OnEnter"/>
			<OnLeave function="GameTooltip_Hide"/>
		</Scripts>
		<Animations>
			<AnimationGroup parentKey="EarnedAnim" looping="NONE" setToFinalAlpha="false">
				<Alpha childKey="EarnedCheckmark" duration="0.5" order="1" fromAlpha="0" toAlpha="0"/>
				<Alpha childKey="EarnedCheckmark" duration="0.0" order="2" fromAlpha="1" toAlpha="1"/>
				<Alpha childKey="CheckmarkFlipbook" duration="0.25" order="1" fromAlpha="0" toAlpha="0"/>
				<Alpha childKey="CheckmarkFlipbook" startDelay="0.25" duration="0.25" order="1" fromAlpha="1" toAlpha="1"/>
				<FlipBook startDelay="0.25" endDelay="0" smoothing="NONE" childKey="CheckmarkFlipbook" duration="0.25" order="1" flipBookRows="2" flipBookColumns="4" flipBookFrames="8" flipBookFrameWidth="0" flipBookFrameHeight="0"/>
			</AnimationGroup>
		</Animations>
	</Frame>

