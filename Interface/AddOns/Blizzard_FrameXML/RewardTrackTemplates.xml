					<KeyValue key="direction" value="-1" type="number"/>
				</KeyValues>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.LeftButton" relativePoint="LEFT"/>
				</Anchors>
			</Button>
			<Button parentKey="RightButton" inherits="RewardTrackButtonTemplate">
				<KeyValues>
					<KeyValue key="direction" value="1" type="number"/>
				</KeyValues>
				<Anchors>
					<Anchor point="LEFT" relativePoint="RIGHT"/>
				</Anchors>
			</Button>
			<Button parentKey="JumpRightButton" inherits="RewardTrackJumpButtonTemplate">
				<KeyValues>
					<KeyValue key="direction" value="1" type="number"/>
				</KeyValues>
				<Anchors>
					<Anchor point="LEFT" relativeKey="$parent.RightButton" relativePoint="RIGHT"/>
