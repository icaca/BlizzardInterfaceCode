<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\Blizzard_SharedXML\UI.xsd">

	<Button name="ShoppingCartServiceButtonTemplate" mixin="ShoppingCartServiceButtonMixin" virtual="true">
		<KeyValues>
			<KeyValue key="eventNamespace" value="GenericCartEvents" type="string"/>
			<KeyValue key="serviceName" value="AddToCart" type="string"/>
		</KeyValues>
		<Size x="64" y="64"/>

		<Scripts>
			<OnClick method="BaseService_OnClick"/>
		</Scripts>
	</Button>

	<Frame name="ShoppingCartPriceTemplate" virtual="true" mixin="ShoppingCartPriceContainerMixin">
		<Size x="80" y="1"/>
		<KeyValues>
			<KeyValue key="isLarge" value="false" type="boolean"/>
		</KeyValues>
		<Layers>
			<Layer level="ARTWORK">
				<Texture parentKey="PriceIcon">
					<Size x="24" y="24"/>
					<Anchors>
						<Anchor point="RIGHT"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<Frame parentKey="PriceContainer">
				<Size x="1" y="24"/>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.PriceIcon" relativePoint="LEFT" x="-8"/>
				</Anchors>
				<KeyValues>
					<KeyValue key="fixedWidth" value="44" type="number"/>
				</KeyValues>
				<Layers>
					<Layer level="ARTWORK">
						<FontString parentKey="SalePrice" inherits="GameFontNormalMed3" wordwrap="false" justifyH="RIGHT" hidden="true">
							<Color color="WHITE_FONT_COLOR"/>
							<Anchors>
								<Anchor point="TOPRIGHT"/>
							</Anchors>
						</FontString>
						<FontString parentKey="Price" inherits="GameFontNormalMed3" wordwrap="false" justifyH="RIGHT">
							<Color color="WHITE_FONT_COLOR"/>
							<Anchors>
								<Anchor point="BOTTOMRIGHT"/>
							</Anchors>
						</FontString>
					</Layer>
					<Layer level="OVERLAY">
						<Texture parentKey="PriceStrikethrough" atlas="pricestrikethrough-gray" hidden="true" useAtlasSize="true">
							<Anchors>
								<Anchor point="CENTER" relativeKey="$parent.Price"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
			</Frame>
		</Frames>
		
		<Scripts>
			<OnLoad method="OnLoad"/>
		</Scripts>
	</Frame>

	<Button name="ShoppingCartCheckoutButtonTemplate" inherits="SharedButtonLargeTemplate, ShoppingCartServiceButtonTemplate" virtual="true">
		<KeyValues>
			<KeyValue key="serviceName" value="ShoppingCartDataServices.PurchaseCart" type="string"/>
		</KeyValues>
		<Frames>
			<Frame parentKey="PriceContainer" inherits="ShoppingCartPriceTemplate">
				<KeyValues>
					<KeyValue key="isLarge" value="true" keyType="boolean"/>
				</KeyValues>
				<Anchors>
					<Anchor point="CENTER"/>
				</Anchors>
			</Frame>
		</Frames>
	</Button>

	<Frame name="ShoppingCartRemoveFromCartButtonTemplate" mixin="ShoppingCartRemoveFromCartItemButtonContainerMixin" propagateMouseInput="Both" virtual="true">
		<Frames>
			<Button parentKey="RemoveFromListButton" inherits="ShoppingCartServiceButtonTemplate" mixin="ShoppingCartRemoveFromCartItemButtonMixin" propagateMouseInput="Motion" hidden="true">
				<Size x="32" y="32"/>
				<Anchors>
					<Anchor point="CENTER" x="-8" y="-8" relativePoint="TOPRIGHT"/>
				</Anchors>
				<KeyValues>
					<KeyValue key="serviceName" value="ShoppingCartDataServices.RemoveFromCart" type="global"/>
				</KeyValues>

				<NormalTexture atlas="auctionhouse-ui-filter-redx">
					<Size x="27" y="27"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</NormalTexture>
				<HighlightTexture atlas="auctionhouse-ui-filter-redx" alphaMode="ADD" alpha="0.4">
					<Size x="27" y="27"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</HighlightTexture>
				<Scripts>
					<OnEnter method="OnEnter"/>
					<OnLeave method="OnLeave"/>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
		</Scripts>
	</Frame>

	<Frame name="ShoppingCartVisualsFrameTemplate" mixin="ShoppingCartVisualsFrameMixin" inherits="ResizeLayoutFrame" virtual="true">
		<Size x="400" y="1"/>
		<KeyValues>
			<KeyValue key="eventNamespace" value="GenericCartEvents" type="string"/>
			<KeyValue key="maxItemsToShow" value="5" type="number"/>
		</KeyValues>

		<Frames>
			<Frame parentKey="CartVisibleContainer" frameLevel="1000">
				<Size y="1"/>
				<Anchors>
					<Anchor point="BOTTOMLEFT"/>
					<Anchor point="BOTTOMRIGHT"/>
				</Anchors>
				<Frames>
					<Frame parentKey="Background" inherits="NineSlicePanelTemplate" frameLevel="500">
						<KeyValues>
							<KeyValue key="layoutType" value="PerksProgramProductsPanelTemplate" type="string"/>
							<KeyValue key="ignoreInLayout" value="true" type="boolean"/>
						</KeyValues>
					</Frame>

					<Frame parentKey="Header">
						<Size y="54"/>
						<Anchors>
							<Anchor point="TOPLEFT" relativeKey="$parent.Background" y="-16"/>
							<Anchor point="TOPRIGHT" relativeKey="$parent.Background" y="-16"/>
						</Anchors>
						<Frames>
							<Button parentKey="HideCartButton" inherits="ShoppingCartServiceButtonTemplate" mixin="ShoppingCartHideCartServiceMixin" motionScriptsWhileDisabled="true">
								<Size x="32" y="32"/>
								<Anchors>
									<Anchor point="TOPRIGHT" x="-48" y="-8"/>
								</Anchors>
								<KeyValues>
									<KeyValue key="serviceName" value="ShoppingCartVisualServices.SetCartShown" type="global"/>
								</KeyValues>

								<Layers>
									<Layer level="BACKGROUND">
										<Texture parentKey="BG" setAllPoints="true">
											<Color r="1" g="1" b="1"/>
										</Texture>
									</Layer>
								</Layers>
							</Button>
						</Frames>
						<Layers>
							<Layer level="OVERLAY">
								<FontString parentKey="Title" inherits="GameFontNormalHuge">
									<Anchors>
										<Anchor point="TOPLEFT" x="36" y="-12"/>
									</Anchors>
								</FontString>
								<Texture parentKey="TopDivider" atlas="perks-divider-short" useAtlasSize="true">
									<Anchors>
										<Anchor point="TOP" relativeKey="$parent.Title" relativePoint="BOTTOM" x="0" y="-12"/>
										<Anchor point="LEFT" x="30" y="0"/>
										<Anchor point="RIGHT" x="-30" y="0"/>
									</Anchors>
								</Texture>
							</Layer>
						</Layers>
					</Frame>

					<Frame parentKey="ScrollBox" inherits="WowScrollBoxList">
						<Size y="1"/>
						<Anchors>
							<Anchor point="TOPLEFT" relativeKey="$parent.Header" relativePoint="BOTTOMLEFT" x="20" y="-16"/>
							<Anchor point="TOPRIGHT" relativeKey="$parent.Header" relativePoint="BOTTOMRIGHT" x="-28" y="-16"/>
						</Anchors>
					</Frame>
					<EventFrame parentKey="ScrollBar" inherits="MinimalScrollBar">
						<Anchors>
							<Anchor point="TOPLEFT" relativeKey="$parent.ScrollBox" relativePoint="TOPRIGHT" x="4" y="-5"/>
							<Anchor point="BOTTOMLEFT" relativeKey="$parent.ScrollBox" relativePoint="BOTTOMRIGHT" x="4" y="5"/>
						</Anchors>
					</EventFrame>

					<Frame parentKey="Footer">
						<Size y="72"/>
						<Anchors>
							<Anchor point="TOPLEFT" relativeKey="$parent.ScrollBox" relativePoint="BOTTOMLEFT" y="-16"/>
							<Anchor point="TOPRIGHT" relativeKey="$parent.ScrollBox" relativePoint="BOTTOMRIGHT" y="-16"/>
						</Anchors>
						<Layers>
							<Layer level="OVERLAY">
								<Texture parentKey="BottomDivider" atlas="perks-divider-short" useAtlasSize="true">
									<Anchors>
										<Anchor point="TOP" x="0" y="-12"/>
										<Anchor point="LEFT" x="30" y="0"/>
										<Anchor point="RIGHT" x="-30" y="0"/>
									</Anchors>
								</Texture>
							</Layer>
						</Layers>
						<Frames>
							<Button parentKey="ClearCartButton" inherits="UIButtonTemplate, ShoppingCartServiceButtonTemplate">
								<Size x="64" y="64"/>
								<Anchors>
									<Anchor point="TOPLEFT" relativeKey="$parent.BottomDivider" relativePoint="BOTTOMLEFT" x="-16" y="-12"/>
								</Anchors>
								<KeyValues>
									<KeyValue key="serviceName" value="ShoppingCartDataServices.ClearCart" type="global"/>
									<KeyValue key="buttonArtKit" value="128-RedButton-Delete" type="string"/>
								</KeyValues>
							</Button>

							<Button parentKey="PurchaseCartButton" inherits="ShoppingCartCheckoutButtonTemplate">
								<Size x="256" y="64"/>
								<Anchors>
									<Anchor point="LEFT" relativeKey="$parent.ClearCartButton" relativePoint="RIGHT" x="16"/>
								</Anchors>
							</Button>
						</Frames>
					</Frame>
				</Frames>
			</Frame>

			<Frame parentKey="CartHiddenContainer">
				<Size y="80"/>
				<Anchors>
					<Anchor point="BOTTOMLEFT"/>
					<Anchor point="BOTTOMRIGHT"/>
				</Anchors>
				<Frames>
					<Button parentKey="ViewCartButton" inherits="UIButtonTemplate, ShoppingCartServiceButtonTemplate" mixin="ShoppingCartShowCartServiceMixin, ShoppingCartViewCartButtonMixin" motionScriptsWhileDisabled="true">
						<Size x="64" y="64"/>
						<Anchors>
							<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMLEFT" x="29" y="21"/>
						</Anchors>
						<KeyValues>
							<KeyValue key="serviceName" value="ShoppingCartVisualServices.SetCartShown" type="global"/>
							<KeyValue key="buttonArtKit" value="128-RedButton-ShoppingCart" type="string"/>
						</KeyValues>

						<Layers>
							<Layer level="OVERLAY">
								<Texture parentKey="ItemCountBG" atlas="tokens-counterbg" useAtlasSize="true">
									<Anchors>
										<Anchor point="CENTER" relativePoint="TOPLEFT" x="3" y="0"/>
									</Anchors>
								</Texture>
								<FontString parentKey="ItemCountText" inherits="GameFontHighlight">
									<Anchors>
										<Anchor point="CENTER" relativeKey="$parent.ItemCountBG" x="0" y="0"/>
									</Anchors>
								</FontString>
							</Layer>
						</Layers>
					</Button>

					<!-- TEMP BUTTON -->
					<Button parentKey="AddToCartButton" inherits="HousingMarketShoppingCartServiceButtonTemplate" mixin="HousingMarketAddToCartServiceMixin">
						<KeyValues>
							<KeyValue key="serviceName" value="ShoppingCartDataServices.AddToCart" type="global"/>
						</KeyValues>
						<Anchors>
							<Anchor point="RIGHT" relativeKey="$parent.ViewCartButton" relativePoint="LEFT" x="-16" y="28"/>
						</Anchors>

						<Layers>
							<Layer level="BACKGROUND">
								<Texture parentKey="BG" setAllPoints="true">
									<Color r="1" g="1" b="1"/>
								</Texture>
							</Layer>
						</Layers>
					</Button>
					<!-- TEMP BUTTON -->
					<Button parentKey="AddToCartButtonBundle" inherits="HousingMarketShoppingCartServiceButtonTemplate" mixin="HousingMarketAddToCartServiceMixin">
						<KeyValues>
							<KeyValue key="serviceName" value="ShoppingCartDataServices.AddToCart" type="global"/>
							<KeyValue key="bundleButton" value="true" type="boolean"/>
						</KeyValues>
						<Anchors>
							<Anchor point="TOP" relativeKey="$parent.AddToCartButton" relativePoint="BOTTOM" y="-16"/>
						</Anchors>

						<Layers>
							<Layer level="BACKGROUND">
								<Texture parentKey="BG" setAllPoints="true">
									<Color r="1" g="0.66" b="1"/>
								</Texture>
							</Layer>
						</Layers>
					</Button>

					<Button parentKey="PurchaseCartButton" inherits="ShoppingCartCheckoutButtonTemplate">
						<Size x="256" y="64"/>
						<Anchors>
							<Anchor point="LEFT" relativeKey="$parent.ViewCartButton" relativePoint="RIGHT" x="16"/>
						</Anchors>
					</Button>
				</Frames>
			</Frame>

			<Frame parentKey="PlayerTotalCurrencyDisplay">
				<Size y="40"/>
				<Anchors>
					<!-- Anchored Dynamically -->
					<Anchor point="BOTTOMLEFT" relativeKey="$parent.CartVisibleContainer" relativePoint="TOPLEFT" x="40" y="8"/>
					<Anchor point="BOTTOMRIGHT" relativeKey="$parent.CartVisibleContainer" relativePoint="TOPRIGHT" x="-40" y="8"/>
				</Anchors>

				<Layers>
					<Layer level="OVERLAY">
						<Texture parentKey="CurrencyIcon">
							<Size x="32" y="32"/>
							<Anchors>
								<Anchor point="RIGHT"/>
							</Anchors>
						</Texture>

						<FontString parentKey="CurrencyTotal" inherits="GameFontHighlightHuge" justifyV="MIDDLE" justifyH="RIGHT">
							<Size y="32"/>
							<Anchors>
								<Anchor point="LEFT"/>
								<Anchor point="RIGHT" relativeKey="$parent.CurrencyIcon" relativePoint="LEFT"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>
		</Frames>

		<Scripts>
			<OnLoad method="OnLoad"/>
		</Scripts>
	</Frame>
</Ui>
