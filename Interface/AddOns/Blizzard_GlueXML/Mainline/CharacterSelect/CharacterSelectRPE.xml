<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\..\Blizzard_SharedXML\UI.xsd">
	<Frame name="RPEChooseExperienceInfoPanelTemplate" virtual="true" enableMouse="true">
		<Size x="365" y="196"/>
		<Frames>
			<Button parentKey="SelectButton" inherits="GlueButtonTemplate" text="RPE_EXPERIENCE_SELECT">
				<Size x="207" y="40"/>
				<Anchors>
					<Anchor point="BOTTOM" y="23"/>
				</Anchors>
			</Button>
		</Frames>
		<Layers>
			<Layer level="BORDER">
				<Texture parentKey="Border" atlas="ui-frame-chamfered">
					<Anchors>
						<Anchor point="TOPLEFT" x="-14" y="14"/>
						<Anchor point="BOTTOMRIGHT" x="14" y="-14"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<FontString parentKey="HeaderText" inherits="GlueFontHighlightLarge">
					<Size x="300" y="0"/>
					<Anchors>
						<Anchor point="TOP" y="-34"/>
					</Anchors>
				</FontString>
				<FontString parentKey="SubHeaderText" inherits="GlueFontNormal">
					<Size x="300" y="0"/>
					<Anchors>
						<Anchor point="TOP" relativeKey="$parent.HeaderText" relativePoint="BOTTOM" y="-10"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>

	<Frame name="RPEChooseExperienceFrame" mixin="RPEChooseExperienceMixin" inherits="CharacterSelectBlockingFrameTemplate">
		<KeyValues>
			<KeyValue key="hideOnClick" type="boolean" value="true"/>
		</KeyValues>
		<Frames>
			<Frame parentKey="SkipPanel" inherits="RPEChooseExperienceInfoPanelTemplate">
				<Anchors>
					<Anchor point="RIGHT" relativePoint="CENTER" x="-30"/>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<FontString parentKey="InfoText" inherits="GlueFontNormalSmall" text="RPE_EXPERIENCE_SKIP_INFO">
							<Size x="300" y="0"/>
							<Anchors>
								<Anchor point="BOTTOM" relativeKey="$parent.SelectButton" relativePoint="TOP" y="8"/>
							</Anchors>
						</FontString>						
					</Layer>
				</Layers>
			</Frame>
			<Frame parentKey="PlayPanel" inherits="RPEChooseExperienceInfoPanelTemplate">
				<Anchors>
					<Anchor point="LEFT" relativePoint="CENTER" x="30"/>
				</Anchors>
				<Frames>
					<Button parentKey="InfoButton" inherits="RinglessHelpPlateButtonTemplate">
						<Anchors>
							<Anchor point="TOPLEFT" x="-12" y="12"/>
						</Anchors>
					</Button>
				</Frames>
			</Frame>			
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnShow method="OnShow"/>
			<OnHide method="OnHide"/>
		</Scripts>
	</Frame>
</Ui>
