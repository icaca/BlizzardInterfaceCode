<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\Blizzard_SharedXML\UI.xsd">
	<!-- Base Control Button Visual Template -->
	<Button name="BaseHousingControlButtonTemplate" mixin="BaseHousingControlButtonMixin" parentArray="Buttons" virtual="true">
		<KeyValues>
			<KeyValue key="useStateColors" type="boolean" value="true"/>
			<KeyValue key="useStateTextures" type="boolean" value="true"/>
		</KeyValues>
		<Size x="36" y="36"/>
		<Layers>
			<Layer level="ARTWORK">
				<Texture parentKey="Icon" setAllPoints="true" texelSnappingBias="0.0" snapToPixelGrid="false"/>
			</Layer>
			<Layer level="OVERLAY" textureSubLevel="0">
				<Texture parentKey="HoverIcon" texelSnappingBias="0.0" snapToPixelGrid="false" alphaMode="ADD" alpha="0.5" hidden="true">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Icon"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Icon"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
	</Button>

	<!-- Intermediate Templates -->
	<Button name="HousingControlActionButtonTemplate" inherits="BaseHousingActionButtonTemplate, BaseHousingControlButtonTemplate" virtual="true">
	</Button>
	<Button name="HousingControlModeButtonTemplate" inherits="BaseHousingModeButtonTemplate, BaseHousingControlButtonTemplate" virtual="true">
	</Button>

	<!-- Specific Control Implementation Templates -->

	<Button name="HouseEditorButtonTemplate" mixin="HouseEditorButtonMixin" inherits="HousingControlModeButtonTemplate" virtual="true">
		<KeyValues>
			<KeyValue key="iconDefault" type="string" value="decor-controls-decoratemode-inactive"/>
			<KeyValue key="iconActive" type="string" value="decor-controls-decoratemode-active"/>
			<KeyValue key="iconPressed" type="string" value="decor-controls-decoratemode-pressed"/>
			<KeyValue key="keybindName" type="string" value="HOUSING_TOGGLEEDITOR"/>
			<KeyValue key="enterTooltip" type="global" value="HOUSING_CONTROLS_EDITOR_BUTTON_ENTER"/>
			<KeyValue key="enterTooltipKeybind" type="global" value="HOUSING_CONTROLS_EDITOR_BUTTON_ENTER_FMT"/>
			<KeyValue key="exitTooltip" type="global" value="HOUSING_CONTROLS_EDITOR_BUTTON_EXIT"/>
			<KeyValue key="exitTooltipKeybind" type="global" value="HOUSING_CONTROLS_EDITOR_BUTTON_EXIT_FMT"/>
			<KeyValue key="keybindIconDefault" type="string" value="keybind-bg"/>
			<KeyValue key="keybindIconActive" type="string" value="keybind-bg_active"/>
		</KeyValues>
		<Layers>
			<Layer level="OVERLAY" textureSubLevel="1">
				<Texture parentKey="KeybindBackground" atlas="keybind-bg" texelSnappingBias="0.0" snapToPixelGrid="false">
					<Size x="24" y="24"/>
					<Anchors>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Icon"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY" textureSubLevel="2">
				<FontString parentKey="ControlText" inherits="NumberFontNormalSmall" justifyH="CENTER" justifyV="MIDDLE">
					<Size y="10"/>
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent.KeybindBackground"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Button>
	
	<Button name="HouseSettingsButtonTemplate" inherits="HousingControlModeButtonTemplate" mixin="HouseSettingsButtonMixin" virtual="true">
		<KeyValues>
			<KeyValue key="iconDefault" type="string" value="decor-controls-settings-default"/>
			<KeyValue key="iconActive" type="string" value="decor-controls-settings-active"/>
			<KeyValue key="iconPressed" type="string" value="decor-controls-settings-pressed"/>
			<KeyValue key="clickSoundKit" value="SOUNDKIT.HOUSING_MINOR_TOP_ACTION_BAR_INTERACT" type="global"/>
		</KeyValues>
	</Button>

	<Button name="HousingExitButtonTemplate" inherits="HousingControlActionButtonTemplate" mixin="HouseExitButtonMixin" virtual="true">
		<KeyValues>
			<KeyValue key="iconDefault" type="string" value="decor-controls-exit-default"/>
			<KeyValue key="iconActive" type="string" value="decor-controls-exit-active"/>
			<KeyValue key="iconPressed" type="string" value="decor-controls-exit-pressed"/>
			<KeyValue key="enabledTooltip" value="HOUSING_CONTROLS_EXIT_BUTTON" type="global"/>
			<KeyValue key="clickSoundKit" value="SOUNDKIT.HOUSING_MINOR_TOP_ACTION_BAR_INTERACT" type="global"/>
		</KeyValues>
        <Scripts>
			<OnClick method="OnClick"/>
		</Scripts>
	</Button>

	<Button name="HouseInfoButtonTemplate" inherits="HousingControlModeButtonTemplate" virtual="true">
		<KeyValues>
			<KeyValue key="iconDefault" type="string" value="decor-controls-houseinfo-default"/>
			<KeyValue key="iconActive" type="string" value="decor-controls-houseinfo-active"/>
			<KeyValue key="iconPressed" type="string" value="decor-controls-houseinfo-pressed"/>
			<!-- TODO: Remove this once implemented -->
			<KeyValue key="notYetImplemented" value="true" type="boolean"/>
			<KeyValue key="nyiLabel" value="House Info" type="string"/>
			<KeyValue key="clickSoundKit" value="SOUNDKIT.HOUSING_MINOR_TOP_ACTION_BAR_INTERACT" type="global"/>
		</KeyValues>
	</Button>

	<Button name="HouseInspectorButtonTemplate" inherits="HousingControlModeButtonTemplate" virtual="true">
		<KeyValues>
			<KeyValue key="iconDefault" type="string" value="decor-controls-inspect-default"/>
			<KeyValue key="iconActive" type="string" value="decor-controls-inspect-active"/>
			<KeyValue key="iconPressed" type="string" value="decor-controls-inspect-pressed"/>
			<!-- TODO: Remove this once implemented -->
			<KeyValue key="notYetImplemented" value="true" type="boolean"/>
			<KeyValue key="nyiLabel" value="House Inspector" type="string"/>
			<KeyValue key="clickSoundKit" value="SOUNDKIT.HOUSING_MINOR_TOP_ACTION_BAR_INTERACT" type="global"/>
		</KeyValues>
	</Button>
</Ui>
