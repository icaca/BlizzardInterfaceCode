				</Layers>
				<Frames>
					<EditBox name="PhotoSharingDescriptionEditBox" multiLine="true" letters="255" setAllPoints="true" parentKey="PhotoSharingDescriptionEditBox" autoFocus="false">
						<Size x="440" y="60"/>
						<Anchors>
							<Anchor point="TOPLEFT"  y="-25" x="5"/>
						</Anchors>
						<Layers>
							<Layer level="ARTWORK">
								<FontString inherits="GameFontNormal" text="PHOTO_SHARING_PREVIEW_EDITBOX_DESCRIPTION_LABEL" justifyH="LEFT">
									<Anchors>
										<Anchor point="TOPLEFT" x="-5" y="23"/>
									</Anchors>
								</FontString>
								<FontString parentKey="DescriptionText" inherits="GameFontDisable" setAllPoints="true" justifyH="LEFT" justifyV="TOP" text="PHOTO_SHARING_PREVIEW_EDITBOX_DESCRIPTION_PLACEHOLDER">
									<Anchors>
										<Anchor point="TOPLEFT"/>
									</Anchors>
								</FontString>
							</Layer>
						</Layers>
						<Scripts>
							<OnEditFocusGained>
								if ( self:GetText() == "" or self:GetText() == " " .. PHOTO_SHARING_PREPOP_DESCRIPTION ) then
									self.DescriptionText:Hide();
									self:SetText(" " .. PHOTO_SHARING_PREPOP_DESCRIPTION);

									-- Better editbox support for this could be warranted.
									-- This ensures the cursor is at the start of the edit box and nothing is highlighted by waiting two frames.
									RunNextFrame(
										function()
											RunNextFrame( function()
												self:ClearHighlightText();
												self:SetCursorPosition(0);
											end );
										end );
								end
							</OnEditFocusGained>
							<OnEditFocusLost>
								if ( self:GetText() == "" or self:GetText() == " " .. PHOTO_SHARING_PREPOP_DESCRIPTION ) then
									self.DescriptionText:Show();
									self:SetText("");
								end
							</OnEditFocusLost>
							<OnTabPressed>
								EditBox_HandleTabbing(self, PHOTO_SHARING_TAB_LIST);
							</OnTabPressed>
							<OnEscapePressed>
								self:ClearFocus();
							</OnEscapePressed>
						</Scripts>
						<FontString inherits="GameFontHighlightSmall"/>
					</EditBox>
				</Frames>
