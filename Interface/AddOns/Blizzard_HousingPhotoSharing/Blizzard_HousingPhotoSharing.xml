				<Frames>
					<EditBox name="PhotoSharingTitleEditBox" multiLine="false" letters="100" setAllPoints="true" parentKey="PhotoSharingTitleEditBox" autoFocus="false">
						<Size x="450" y="15"/>
						<Anchors>
