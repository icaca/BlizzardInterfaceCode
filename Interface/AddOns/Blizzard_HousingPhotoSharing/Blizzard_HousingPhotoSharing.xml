									<Anchors>
										<Anchor point="TOPLEFT" x="-5" y="23"/>
									</Anchors>
								</FontString>
								<FontString parentKey="TitleText" inherits="GameFontDisable" setAllPoints="true" justifyH="LEFT" justifyV="TOP" text="PHOTO_SHARING_PREVIEW_EDITBOX_TITLE_PLACEHOLDER">
									<Anchors>
										<Anchor point="TOPLEFT"/>
									</Anchors>
								</FontString>
							</Layer>
						</Layers>
						<Scripts>
							<OnEditFocusGained>
								self.TitleText:Hide();
							</OnEditFocusGained>
							<OnEditFocusLost>
								if ( self:GetText() == "" ) then
									self.TitleText:Show();
								end
							</OnEditFocusLost>
							<OnTabPressed>
								EditBox_HandleTabbing(self, PHOTO_SHARING_TAB_LIST);
							</OnTabPressed>
							<OnEscapePressed>
								self:ClearFocus();
							</OnEscapePressed>
						</Scripts>
						<FontString inherits="GameFontHighlightSmall"/>
					</EditBox>
				</Frames>
