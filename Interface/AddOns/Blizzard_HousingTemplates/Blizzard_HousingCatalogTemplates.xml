<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\Blizzard_SharedXML\UI.xsd">
	<Frame name="PagedHousingCatalogTemplate" mixin="PagedHousingCatalogMixin" inherits="PagedNaturalSizeGridContentFrameTemplate" virtual="true">
		<KeyValues>
			<KeyValue key="viewsPerPage" value="1" type="number"/>
			<KeyValue key="spacerSize" value="10" type="number"/>
			<KeyValue key="xPadding" value="10" type="number"/>
			<KeyValue key="yPadding" value="10" type="number"/>
		</KeyValues>

		<!-- 
		<Frames>
			Expects a View frame and a PagingControls frame
			Not added to the template here so that exact sizing/positioning can be easily specified by the parent per-use-case

			<Frame parentKey="View1" parentArray="ViewFrames"/>
			<Frame parentKey="PagingControls" inherits="PagingControlsHorizontalTemplate"/>
		</Frames>
		-->
		<Scripts>
			<OnLoad method="OnLoad" inherit="prepend"/>
		</Scripts>
	</Frame>

	<Frame name="ScrollingHousingCatalogTemplate" mixin="ScrollingHousingCatalogMixin" virtual="true">
		<KeyValues>
			<KeyValue key="horizontalSpacing" value="5" type="number"/>
			<KeyValue key="verticalSpacing" value="10" type="number"/>
			<KeyValue key="topPadding" value="0" type="number"/>
			<KeyValue key="bottomPadding" value="0" type="number"/>
			<KeyValue key="leftPadding" value="0" type="number"/>
			<KeyValue key="rightPadding" value="0" type="number"/>
		</KeyValues>
		<Frames>
			<Frame parentKey="ScrollBox" inherits="WowScrollBoxList">
				<KeyValues>
					<!-- How many rows are scrolled past at once via scroll wheel -->
					<KeyValue key="wheelPanScalar" value="1" type="number"/>
				</KeyValues>
				<Anchors>
					<Anchor point="TOPLEFT"/>
					<Anchor point="BOTTOMRIGHT" x="-23"/>
				</Anchors>
			</Frame>
			<!-- Not using built-in scrollbox shadows as these need to be able to extend outside the boundaries of the scrollbox's clipping -->
			<Frame parentKey="Shadows" setAllPoints="true" hidden="false">
				<Layers>
				<Layer level="OVERLAY">
					<Texture parentKey="Upper" atlas="Artifacts-Retiring-Gradient">
						<Size y="60"/>
						<Anchors>
							<Anchor point="TOPLEFT"/>
							<Anchor point="TOPRIGHT"/>
						</Anchors>
						<TexCoords left="0" right="1" top="1" bottom="0" />
					</Texture>

					<Texture parentKey="Lower" atlas="Artifacts-Retiring-Gradient">
						<Size y="60"/>
						<Anchors>
							<Anchor point="BOTTOMLEFT"/>
							<Anchor point="BOTTOMRIGHT"/>
						</Anchors>
					</Texture>
				</Layer>
			</Layers>
			</Frame>
			<EventFrame parentKey="ScrollBar" inherits="MinimalScrollBar">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.ScrollBox" relativePoint="TOPRIGHT" x="5" y="0"/>
					<Anchor point="BOTTOMLEFT" relativeKey="$parent.ScrollBox" relativePoint="BOTTOMRIGHT" x="5" y="0"/>
				</Anchors>
			</EventFrame>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad" inherit="prepend"/>
		</Scripts>
	</Frame>
</Ui>