<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\Blizzard_SharedXML\UI.xsd">

	<Frame name="MicroMenuContainer" inherits="EditModeMicroMenuSystemTemplate" parent="UIParent" frameLevel="51" mixin="MicroMenuContainerMixin">
		<Size x="1" y="1"/>
		<Anchors>
			<Anchor point="BOTTOMRIGHT"/>
		</Anchors>
		<Scripts>
			<OnLoad method="OnLoad" inherit="prepend"/>
			<OnEvent method="OnEvent"/>
		</Scripts>
	</Frame>

	<Frame name="MicroMenu" inherits="GridLayoutFrame" parent="MicroMenuContainer" flattenRenderLayers="true" mixin="MicroMenuMixin">
		<Size x="1" y="1"/>
		<Anchors>
			<Anchor point="BOTTOMRIGHT"/>
		</Anchors>
		<KeyValues>
			<KeyValue key="childXPadding" value="-3" type="number"/>
			<KeyValue key="childYPadding" value="-4" type="number"/>
			<KeyValue key="isHorizontal" value="true" type="boolean"/>
			<KeyValue key="layoutFramesGoingRight" value="true" type="boolean"/>
			<KeyValue key="layoutFramesGoingUp" value="false" type="boolean"/>
		</KeyValues>
		<Scripts>
			<OnLoad method="OnLoad"/>
		</Scripts>
	</Frame>
</Ui>
