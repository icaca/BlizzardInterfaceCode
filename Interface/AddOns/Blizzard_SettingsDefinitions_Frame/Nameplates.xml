<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\Blizzard_SharedXML\UI.xsd">
	<Frame name="NamePlatePreviewTemplate" virtual="true">
		<Size y="195"/> <!-- Must be at least as large as largest possible value of NamePlateDriverMixin:GetNamePlateHeight plus the height of the Preview FontString.-->
		<Frames>
			<Button parentKey="NamePlate" mixin="NamePlatePreviewMixin">
				<Anchors>
					<Anchor point="BOTTOM" x="0" y="0"/>
				</Anchors>
				<Scripts>
					<OnShow method="OnShow"/>
					<OnHide method="OnHide"/>
				</Scripts>
			</Button>
		</Frames>
		<Layers>
			<Layer level="OVERLAY">
				<FontString text="PREVIEW" inherits="GameFontHighlightSmall">
					<Anchors>
						<Anchor point="TOP" x="0" y="0"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>
</Ui>
