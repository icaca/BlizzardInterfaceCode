<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\..\..\..\WoW\Data\Interface\AddOns\Blizzard_SharedXML\UI.xsd">
	<Script file="Blizzard_SharedTalentFrameTemplates.lua"/>
	
	<Frame name="TalentFrameCurrencyDisplayTemplate" mixin="TalentFrameCurrencyDisplayMixin" inherits="CallbackRegistrantTemplate, ResizeLayoutFrame" virtual="true">
		<KeyValues>
			<KeyValue key="widthPadding" value="10" type="number"/>
			<KeyValue key="heightPadding" value="6" type="number"/>
		</KeyValues>
		<Size x="1" y="1"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Background" setAllPoints="true">
					<KeyValues>
						<KeyValue key="ignoreInLayout" value="true" type="boolean"/>
					</KeyValues>
					<Color r="0.1" g="0.1" b="0.1" a="0.7"/>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString parentKey="Text" inherits="GameFontHighlightLarge2" justifyH="RIGHT">
					<Anchors>
						<Anchor point="RIGHT" x="-5" y="0"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnShow method="OnShow"/>
		</Scripts>
	</Frame>

	<Frame name="TalentFrameGateTemplate" mixin="TalentFrameGateMixin" virtual="true">
		<Size x="124" y="40"/>
		<Layers>
			<Layer level="ARTWORK">
				<Texture parentKey="LockIcon" atlas="talents-gate" useAtlasSize="true">
					<Anchors>
						<Anchor point="RIGHT" x="20" y="2"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString parentKey="GateText" inherits="GameFontHighlightHuge2" hidden="true">
					<KeyValues>
						<KeyValue key="ignoreInLayout" value="true" type="boolean"/>
					</KeyValues>
					<Anchors>
						<Anchor point="RIGHT" relativeKey="$parent.LockIcon" relativePoint="LEFT" x="-10" y="-1"/>
					</Anchors>
					<Color r="1" g="0.64" b="0.56"/>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
		</Scripts>
	</Frame>

	<Frame name="TraitsCommitControlsContainerTemplate" mixin="TraitsCommitControlsContainerMixin" virtual="true">
		<Size x="242" y="27"/>
		<Frames>
			<Button parentKey="CommitButton" inherits="UIPanelButtonNoTooltipTemplate, UIButtonTemplate" text="TALENT_FRAME_APPLY_BUTTON_TEXT">
				<Size x="164" y="22"/>
				<Anchors>
					<Anchor point="CENTER" x="0" y="0"/>
				</Anchors>
				<Frames>
					<Frame parentKey="YellowGlow" hidden="true">
						<Size y="1"/>
						<Anchors>
							<Anchor point="LEFT" x="-12" y="0"/>
							<Anchor point="RIGHT" x="12" y="0"/>
						</Anchors>
						<Layers>
							<Layer level="ARTWORK">
								<Texture parentKey="Left" atlas="newplayertutorial-yellowGlow-redbutton-left" useAtlasSize="true" alphaMode="ADD">
									<Anchors>
										<Anchor point="LEFT"/>
									</Anchors>
								</Texture>
								<Texture parentKey="Right" atlas="newplayertutorial-yellowGlow-redbutton-right" useAtlasSize="true" alphaMode="ADD">
									<Anchors>
										<Anchor point="RIGHT"/>
									</Anchors>
								</Texture>
								<Texture parentKey="Middle" atlas="newplayertutorial-yellowGlow-redbutton-middle" alphaMode="ADD">
									<Anchors>
										<Anchor point="TOPLEFT" relativeKey="$parent.Left" relativePoint="TOPRIGHT"/>
										<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Right" relativePoint="BOTTOMLEFT"/>
									</Anchors>
								</Texture>
							</Layer>
						</Layers>
					</Frame>
				</Frames>
			</Button>

			<Button parentKey="UndoButton" inherits="IconButtonTemplate" hidden="true">
				<KeyValues>
					<KeyValue key="iconAtlas" value="talents-button-undo" type="string"/>
					<KeyValue key="useAtlasSize" value="true" type="boolean"/>
					<KeyValue key="useIconAsHighlight" value="true" type="boolean"/>
					<KeyValue key="tooltipText" value="TALENT_FRAME_DISCARD_CHANGES_BUTTON_TOOLTIP" type="global"/>
					<KeyValue key="tooltipTextColor" value="HIGHLIGHT_FONT_COLOR" type="global"/>
				</KeyValues>
				<Size x="25" y="25"/>
				<Anchors>
					<Anchor point="LEFT" relativeKey="$parent.CommitButton" relativePoint="RIGHT" x="14" y="0"/>
				</Anchors>
			</Button>

			<Button parentKey="ResetButton" inherits="IconButtonTemplate" hidden="true">
				<KeyValues>
					<KeyValue key="iconAtlas" value="talents-button-reset" type="string"/>
					<KeyValue key="useAtlasSize" value="true" type="boolean"/>
					<KeyValue key="useIconAsHighlight" value="true" type="boolean"/>
					<KeyValue key="tooltipText" value="Reset Tree" type="global"/>
					<KeyValue key="tooltipTextColor" value="HIGHLIGHT_FONT_COLOR" type="global"/>
				</KeyValues>
				<Size x="25" y="25"/>
				<Anchors>
					<Anchor point="LEFT" relativeKey="$parent.CommitButton" relativePoint="RIGHT" x="14" y="0"/>
				</Anchors>
			</Button>
		</Frames>

		<Scripts>
			<OnShow method="OnShow"/>
		</Scripts>
	</Frame>

	<Frame name="TalentSubTreeHeaderTemplate" mixin="TalentSubTreeHeaderMixin" inherits="VerticalLayoutFrame, CallbackRegistrantTemplate" virtual="true">
		<KeyValues>
			<KeyValue key="fixedWidth" value="1000" type="number"/>
		</KeyValues>
		<Size x="1" y="1"/>
		<Layers>
			<Layer level="ARTWORK">
				<Texture parentKey="Line" setAllPoints="false">
					<Size x="1" y="2"/>
					<KeyValues>
						<KeyValue key="layoutIndex" value="1" type="number"/>
						<KeyValue key="expand" value="true" type="boolean"/>
						<KeyValue key="bottomPadding" value="10" type="number"/>
					</KeyValues>
					<Color r="0.4" g="0.4" b="0.4"/>
				</Texture>

				<FontString parentKey="Text" inherits="Game27Font">
					<KeyValues>
						<KeyValue key="layoutIndex" value="2" type="number"/>
						<KeyValue key="expand" value="true" type="boolean"/>
						<KeyValue key="bottomPadding" value="8" type="number"/>
					</KeyValues>
					<Size x="1" y="24"/>
					<Color r="1" g="1" b="1"/>
				</FontString>

				<FontString parentKey="Info" inherits="Game22Font">
					<KeyValues>
						<KeyValue key="layoutIndex" value="3" type="number"/>
						<KeyValue key="expand" value="true" type="boolean"/>
					</KeyValues>
					<Size x="1" y="16"/>
					<Color r="1" g="1" b="1"/>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnShow method="OnShow"/>
		</Scripts>
	</Frame>

	<Frame name="TalentFrameHeaderTemplate" mixin="TalentFrameHeaderMixin" inherits="VerticalLayoutFrame" virtual="true">
		<KeyValues>
			<KeyValue key="fixedWidth" value="200" type="number"/>
		</KeyValues>
		<Size x="1" y="1"/>
		<Layers>
			<Layer level="ARTWORK">
				<FontString parentKey="Text" inherits="GameFontHighlightLarge2">
