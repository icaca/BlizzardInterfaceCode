					</KeyValues>
					<Size x="1" y="16"/>
					<Color r="1" g="1" b="1"/>
				</FontString>

				<Texture parentKey="Line" setAllPoints="false">
					<Size x="1" y="2"/>
					<KeyValues>
						<KeyValue key="layoutIndex" value="2" type="number"/>
						<KeyValue key="expand" value="true" type="boolean"/>
					</KeyValues>
					<Color r="0.7" g="0.7" b="0.7"/>
				</Texture>
			</Layer>
		</Layers>
