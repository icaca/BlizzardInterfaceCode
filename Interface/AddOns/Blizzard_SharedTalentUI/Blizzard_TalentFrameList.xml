	<Frame name="TalentFrameListTemplate" mixin="TalentFrameListMixin" inherits="TalentFrameBaseTemplate, TalentFrameFixedPositionsTemplate" virtual="true">
		<KeyValues>
			<!--
			isVertical: whether the buttons in the list are arranged vertically (true) or horizontally (false).
			centerAlign: whether list of buttons is center-aligned vertically or horizontally (based on isVertical).
			buttonSpacing: spacing between buttons in the list.
			-->
			<KeyValue key="isVertical" value="true" type="boolean"/>
			<KeyValue key="centerAlign" value="false" type="boolean"/>
			<KeyValue key="buttonSpacing" value="20" type="number"/>
		</KeyValues>
	</Frame>
</Ui>
